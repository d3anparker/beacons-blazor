@page "/beacon"

<h3>Beacon</h3>

@if (Position is null)
{
    <div>
        Current position unknown.
    </div>
}
else
{
    <div class="mb-3">
        Current position is: @Position.Coords.Latitude, @Position.Coords.Longitude
    </div>

    @if (Watching)
    {
        <button class="button" @onclick="() => StopWatchAsync()">Stop watching</button>
    } else {
        <button class="button" @onclick="() => StartWatchAsync()">Start watching</button>
    }
}