{
  "compileOnSave": true,
  "compilerOptions": {
    "checkJs": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "inlineSourceMap": true,
    "target": "ES2017",
    "outDir": "wwwroot/js",
    "lib": [ "ES2015", "DOM" ],
    "module": "ES2015",
    "moduleResolution": "node",
    "baseUrl": "./Scripts/"
  },
  "include": [
    "./Scripts/src/**/*"
  ]
}
